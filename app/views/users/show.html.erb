
<h3><%= @user.name %></h3>

<p>
  <b>Username</b>: <%= @user.username %>
</p>

<p>
  <b>Phone</b>: <%= @user.phone? ? 'N/A' : @user.phone %>
</p>

<p>
  <b>Email</b>: <%= @user.email %>
</p>

<p>
  <b>Role</b>: <%= @user.role %>
</p>


<p>
  <b>Active</b>: <%= @user.active ? 'Yes' : 'No' %>
</p>

<%= render partial: "partials/object_options", locals: {model_name: "user", object: @user}  %>
