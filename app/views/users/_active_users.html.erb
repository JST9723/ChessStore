<% if @users.empty? %>
  <h4>No users at this time.</h4>
<% else %>
  <h3>List of users</h3><br>
  <table class="table table-striped" style="width:85%">
    <!-- <thead> -->
      <tr>
        <th width="150">Name</th>
        <th width="150">Username</th>
        <th width="170">Email</th>
        <% if can? :edit, User %>
          <th width="50">Action</th>
        <% end %>
      </tr>
    <!-- </thead>
    <tbody> -->
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.proper_name, user_path(user) %></td>
          <td><%= link_to user.username, user_path(user) %></td>
          <td><%= mail_to user.email, user.email, encode: "javascript" %></td>
          <% if can? :edit, User %>
          <td>
            <%= link_to(edit_user_path(user), class: "button tiny") do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit<% end %>
          </td>
          <% end %>
        </tr>
      <% end %>
    <!-- </tbody> -->
  </table>
<% end %>
</br>
<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
<p>&nbsp;</p>
